    \filldraw [massif] (Me) -- (Mf) -- (Mg) -- (Mh) -- cycle ;
    \filldraw [massif] (Mc) -- (Md) -- (Mh) -- (Mg) -- cycle ;
    \filldraw [massif] (Mb) -- (Mc) -- (Mg) -- (Mf) -- cycle ;
