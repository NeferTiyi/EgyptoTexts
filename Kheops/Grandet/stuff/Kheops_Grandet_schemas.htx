    \coordinate (Mb) at ( 5.00, 0.00, 0.00) ;
    \coordinate (Mc) at ( 5.00, 0.00, 5.00) ;
    \coordinate (Md) at ( 0.00, 0.00, 5.00) ;
    \coordinate (Me) at ( 0.00, 4.00, 0.00) ;
    \coordinate (Mf) at ( 5.00, 4.00, 0.00) ;
    \coordinate (Mg) at ( 5.00, 4.00, 5.00) ;
