    \coordinate (Z)  at ( 1.75, 1.00, 4.00) ;
    \coordinate (Zt) at ( {1.75-sin(45)*\R}, {1.00+sin(45)*\R}, 4.00) ;
    \coordinate (Zb) at ( {1.75+sin(45)*\R}, {1.00-sin(45)*\R}, 4.00) ;

