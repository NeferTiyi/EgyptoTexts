    \fill [trou, dotted]        (Zt) -- (Yt) -- (Yb) -- (Zb) -- cycle ;
    \draw [trou]                (Y)  circle (\R) ;

    % Légendes
    \node at ( 0.00, 0.00) {Bloc posé sur le sable} ;
    \node at ( 0.00, 0.00) {Massif plein} ;
    \node at ( 0.00, 0.00) {Cuve remplie de sable} ;


  \end{tikzpicture}
  \caption{Vérin à sable}
