\newcommand{\quartier}[1][( 0.00, 0.00)]{%
  \foreach \f in {1, -1}{%
    \filldraw [shift={#1}, fill=gray!18] 
              ( 1.00*\f, 0.00) rectangle ++ ( 5.00*\f, 5.00) ;
    \draw [shift={#1}] ( 3.00*\f, 0.00) -- ++ ( 0.00,    5.00) ;
    \foreach \x in {1, 2, 3, 4} {%
      \draw [shift={#1}] ( 3.00*\f, \x) -- ++ ( 3.00*\f, 0.00) ;
    }
  }
}

