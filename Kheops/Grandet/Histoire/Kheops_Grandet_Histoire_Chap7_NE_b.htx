    \draw [-|]  (-5, 0) node [left] {occupation de Giza :} -- 
                (-2, 0) node [above left]  {OK} ;
    \draw [|-]  ( 2, 0) node [above right] {Aménophis~II} -- 
                ( 5, 0) ;
    \draw       (-5,-0.5) node [left] {statuaire :} ;
